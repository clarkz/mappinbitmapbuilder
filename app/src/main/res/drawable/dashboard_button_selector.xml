<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- non-focused, selected state  -->
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/focused_gradient" />
    <!--  focused state -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/focused_gradient" />
    <!-- focused and selected state -->
    <item android:state_focused="true" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/focused_gradient" />
    <!-- pressed state -->
    <item android:state_pressed="true" android:drawable="@drawable/pressed_gradient" />
    <!-- disabled state -->
    <item android:state_enabled="false" android:drawable="@color/medium_grey" />
    <!-- non-focused state -->
    <item android:drawable="@color/clear" />
</selector>
