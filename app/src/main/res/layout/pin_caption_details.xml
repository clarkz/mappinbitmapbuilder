<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/price_block"
        style="@style/block"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/listing_icon_reduced"
            style="@style/wrap"
            android:contentDescription="description"
            android:paddingRight="3dp"
            android:paddingTop="7dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/map_caption_price"
            style="@style/wrap"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="@dimen/map_bubble_text_size_xl"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/map_caption_price_na"
            style="@style/wrap"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="@dimen/map_bubble_price_na_text_size"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/sold_date"
            style="@style/wrap"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:paddingRight="25dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/map_bubble_text_size_s"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/newplan_foreclosure_bankowned_line"
        style="@style/block"
        android:layout_below="@id/price_block"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:id="@+id/map_caption_line2"
        style="@style/map_bubble_single_line_text.size_m"
        android:layout_below="@id/newplan_foreclosure_bankowned_line"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/map_caption_line3_1"
        style="@style/map_bubble_single_line_text.size_m"
        android:layout_below="@+id/map_caption_line2"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/map_caption_line3_2"
        style="@style/map_bubble_single_line_text.size_m"
        android:layout_below="@+id/map_caption_line2"
        android:layout_marginTop="-4dp"
        android:textIsSelectable="false" />

</merge>